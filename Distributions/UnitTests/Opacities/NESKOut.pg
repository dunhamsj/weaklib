#!/usr/bin/gnuplot
reset
set terminal pngcairo size 600,400 font ',10'
#set output 'output.png'
set output '| display png:-'
set autoscale

DATAFILE = "Output0213.d"

set xlabel " ep (MeV) "

set ylabel " e (MeV) "

set zlabel "NES Kernel (cm^{-1})"

set title "R^{out}_{NES,0}"

set logscale xy

set palette defined (-3 "blue", 0 "white", 1 "red")
set pm3d map 
set hidden3d
set dgrid3d 30,30 
set pm3d corners2color c1
splot DATAFILE using 3:4:5 with pm3d lt palette
#
