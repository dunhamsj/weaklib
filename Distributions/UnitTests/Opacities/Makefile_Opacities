include ../../../Build/Makefile_Build

all: wlOpacityFieldsTest \
     wlReadOpacityTableTest \
     wlOpacityInterpolationTest \
     wlOpacityPerformanceTest \
     wlEScatteringKernelTest \
     wlGreyTableTest \
     wlNESKernelTest

wlOpacityFieldsTest: \
	$(weaklib) wlOpacityFieldsTest.o
	$(FLINKER) $(FLAGS) -o wlOpacityFieldsTest_$(MACHINE) \
	$(weaklib) wlOpacityFieldsTest.o \
	$(LIBRARIES)

wlReadOpacityTableTest: \
	$(weaklib) wlReadOpacityTableTest.o
	$(FLINKER) $(FLAGS) -o wlReadOpacityTableTest_$(MACHINE) \
	$(weaklib) wlReadOpacityTableTest.o \
	$(LIBRARIES)

wlOpacityInterpolationTest: \
	$(weaklib) wlOpacityInterpolationTest.o
	$(FLINKER) $(FLAGS) -o wlOpacityInterpolationTest_$(MACHINE) \
	$(weaklib) wlOpacityInterpolationTest.o \
	$(LIBRARIES)

wlOpacityPerformanceTest: \
	$(weaklib) wlOpacityPerformanceTest.o
	$(FLINKER) $(FLAGS) -o wlOpacityPerformanceTest_$(MACHINE) \
	$(weaklib) wlOpacityPerformanceTest.o \
	$(LIBRARIES)

wlEScatteringKernelTest: \
	$(weaklib) wlEScatteringKernelTest.o
	$(FLINKER) $(FLAGS) -o wlEScatteringKernelTest_$(MACHINE) \
	$(weaklib) wlEScatteringKernelTest.o \
	$(LIBRARIES)

wlGreyTableTest: \
	$(weaklib) wlGreyTableTest.o
	$(FLINKER) $(FLAGS) -o wlGreyTableTest_$(MACHINE) \
	$(weaklib) wlGreyTableTest.o \
	$(LIBRARIES)

wlNESKernelTest: \
	$(weaklib) wlNESKernelTest.o
	$(FLINKER) $(FLAGS) -o wlNESKernelTest_$(MACHINE) \
	$(weaklib) wlNESKernelTest.o \
        $(LIBRARIES)

clean:
	rm -f *.o *.mod *.ld

clobber: clean
	rm -f wlOpacityFieldsTest_$(MACHINE)
	rm -f wlReadOpacityTableTest_$(MACHINE)
	rm -f wlOpacityInterpolationTest_$(MACHINE)
	rm -f wlOpacityPerformanceTest_$(MACHINE)
	rm -f wlEScatteringKernelTest_$(MACHINE)
	rm -f wlGreyTableTest_$(MACHINE)
	rm -f wlNESKernelTest_$(MACHINE)

wlOpacityFieldsTest.o: \
  wlKindModule.o \
  wlOpacityTableModule.o \
  wlOpacityFieldsModule.o \
  wlGridModule.o \
  wlOpacityFieldsTest.f90

wlReadOpacityTableTest.o: \
  wlOpacityTableModule.o \
  wlIOModuleHDF.o \
  wlOpacityTableIOModuleHDF.o \
  wlReadOpacityTableTest.f90

